<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.artqueen.knowu.EssentialFragments.Needs_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/needsChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_gravity="center_horizontal|bottom"></RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/subchart_header_start"
        android:gravity="center_vertical|center_horizontal"
        android:minHeight="60dp"
        android:textSize="14sp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:background="#6effffff"
        android:textColor="#ff000000" />

</RelativeLayout>
